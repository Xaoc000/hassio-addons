{
  "name": "Motion",
  "url": "https://github.com/dcmartin/hassio-addons",
  "version": "0.3.23",
  "slug": "motion",
  "description": "Motion addon from LINUX package https://motion-project.github.io/",
  "startup": "before",
  "boot": "auto",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "i386"
  ],
  "hassio_api": true,
  "homeassistant_api": true,
  "privileged": [
    "SYS_ADMIN"
  ],
  "webui": "http://[HOST]:[PORT:8080]/",
  "timeout": 30,
  "tmpfs": "size=256m,uid=0,rw",
  "map": [
    "share:rw",
    "config:rw"
  ],
  "ports": {
    "8000/tcp": 8000,
    "8080/tcp": 8080,
    "8081/tcp": 8081,
    "8082/tcp": 8082,
    "8083/tcp": 8083,
    "8084/tcp": 8084,
    "8085/tcp": 8085,
    "8086/tcp": 8086,
    "8087/tcp": 8087,
    "8088/tcp": 8088,
    "8089/tcp": 8089,
    "8090/tcp": 8090
  },
  "options": {
    "name": "",
    "timezone": "Americas/Los_Angeles",
    "username": null,
    "password": null,
    "cameras": [
      {
        "name": "kelispond",
        "url": "mjpeg://dcmartin.dyndns.org:8897/img/video.mjpeg"
      }
    ]
  },
  "schema": {
    "name": "str?",
    "username": "str?",
    "password": "str?",
    "timezone": "str?",
    "cameras": [
      {
        "name": "str",
        "url": "str?",
        "device": "str?",
        "userpass": "str?",
        "keepalive": "str?",
        "port": "port?",
        "quality": "int?",
        "width": "int?",
        "height": "int?",
        "rotate": "int?",
        "threshold": "int?",
        "models": "str?"
      }
    ],
    "log_level": "int?",
    "log_type": "str?",
    "videodevice": "str?",
    "v412_pallette": "int?",
    "auto_brightness": "str?",
    "locate_motion_mode": "str?",
    "locate_motion_style": "str?",
    "output_pictures": "str?",
    "picture_type": "str?",
    "threshold_tune": "str?",
    "pre_capture": "int?",
    "post_capture": "int?",
    "event_gap": "int?",
    "minimum_motion_frames": "int?",
    "quality": "int?",
    "width": "int?",
    "height": "int?",
    "framerate": "int?",
    "minimum_frame_time": "int?",
    "brightness": "int?",
    "contrast": "int?",
    "saturation": "int?",
    "hue": "int?",
    "rotate": "int?",
    "webcontrol_port": "port?",
    "stream_port": "port?",
    "stream_quality": "int?",
    "threshold": "int?",
    "lightswitch": "int?",
    "netcam_url": "str?",
    "netcam_userpass": "str?",
    "netcam_keepalive": "str?",
    "wvr_url": "str?",
    "wvr_apikey": "str?",
    "wvr_classifier": "str?",
    "wvr_date": "str?",
    "wvr_version": "str?",
    "digits_jobid": "str?",
    "digits_server_url": "str?",
    "mqtt_host": "str?",
    "mqtt_port": "port?",
    "fov": "int?",
    "cloudant_url": "str?",
    "cloudant_username": "str?",
    "cloudant_password": "str?",
    "daemon": "str?",
    "interval": "int?",
    "fps": "int?",
    "post_pictures": "str?",
    "minimum_animate": "int?",
    "target_dir": "str?"
  }
}
