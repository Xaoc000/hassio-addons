{
  "name": "Motion",
  "url": "https://github.com/dcmartin/hassio-addons",
  "version": "1.9",
  "slug": "motion",
  "description": "Motion package for networked camera(s) with Watson VR and nVidia DIGITS image classification",
  "startup": "before",
  "boot": "auto",
  "arch": [ "aarch64","amd64","armhf","i386" ],
  "hassio_api":true,
  "homeassistant_api":true,
  "privileged":["SYS_ADMIN"],
  "webui":"http://[HOST]:[PORT:8080]/",
  "map":[
    "share:rw",
    "addons:rw"
  ],
  "ports": {
     "8000/tcp": 8000,
     "8080/tcp": 8080,
     "8081/tcp": 8081,
     "8082/tcp": 8082,
     "8083/tcp": 8083,
     "8084/tcp": 8084
  },
  "options": {
    "log_level":6,
    "log_type":"all",
    "timezone":"America/Los_Angeles",
    "name":"test",
    "location":"test",
    "wvr_url": "https://gateway-a.watsonplatform.net/visual-recognition/api",
    "wvr_apikey":"",
    "wvr_classifier": "default",
    "wvr_date": "2016-05-20",
    "wvr_version": "v3",
    "digits_jobid":"",
    "digits_server_url":"",
    "mqtt_host":"",
    "mqtt_port":1883,
    "videodevice":"/dev/video0",
    "v412_pallette":17,
    "auto_brightness":"off",
    "locate_motion_mode":"on",
    "locate_motion_style":"box",
    "output_pictures":"on",
    "picture_type":"jpeg",
    "threshold_tune":"on",
    "pre_capture":0,
    "post_capture":0,
    "event_gap":60,
    "minimum_motion_frames":0,
    "quality":100,
    "width":640,
    "height":480,
    "framerate":2,
    "minimum_frame_time":0,
    "brightness":0,
    "contrast":0,
    "saturation":0,
    "hue":0,
    "rotate":0,
    "webcontrol_port":8080,
    "stream_port":8081,
    "stream_quality":100,
    "threshold":5000,
    "lightswitch":0,
    "username":"",
    "password":"",
    "cameras":[
      {"name":"garage","url":"mjpeg://192.168.1.180:80/img/video.mjpeg"},
      {"name":"upperpath","url":"mjpeg://192.168.1.176:80/img/video.mjpeg"},
      {"name":"frontwalk","url":"mjpeg://192.168.1.179:80/img/video.mjpeg"},
      {"name":"dogyard","url":"mjpeg://192.168.1.169:80/img/video.mjpeg"}
    ],
    "netcam_url":"",
    "netcam_userpass":"",
    "netcam_keepalive":"1.1",
    "fov":75,
    "cloudant_url":"",
    "cloudant_username":"",
    "cloudant_password":"",
    "daemon":"on",
    "interval":30,
    "target_dir":"/share/motion"
  },
  "schema": {
    "log_level":"int?",
    "log_type":"str?",
    "cameras":[{"name":"str","url":"str","userpass":"str?","keepalive":"str?","port":"port?","quality":"int?","models":"str?","threshold":"int?"}],
    "timezone":"str",
    "name":"str",
    "location":"str",
    "wvr_url":"str?",
    "wvr_apikey":"str?",
    "wvr_classifier":"str?",
    "wvr_date":"str?",
    "wvr_version":"str?",
    "digits_jobid":"str?",
    "digits_server_url":"str?",
    "mqtt_host":"str?",
    "mqtt_port":"port?",
    "videodevice":"str?",
    "v412_pallette":"int?",
    "auto_brightness":"str?",
    "locate_motion_mode":"str?",
    "locate_motion_style":"str?",
    "output_pictures":"str?",
    "picture_type":"str?",
    "threshold_tune":"str?",
    "pre_capture":"int?",
    "post_capture":"int?",
    "event_gap":"int?",
    "minimum_motion_frames":"int?",
    "quality":"int?",
    "width":"int?",
    "height":"int?",
    "framerate":"int?",
    "minimum_frame_time":"int?",
    "brightness":"int?",
    "contrast":"int?",
    "saturation":"int?",
    "hue":"int?",
    "rotate":"int?",
    "webcontrol_port":"port?",
    "stream_port":"port?",
    "stream_quality":"int?",
    "threshold":"int?",
    "lightswitch":"int?",
    "username":"str?",
    "password":"str?",
    "netcam_url":"str?",
    "netcam_userpass":"str?",
    "netcam_keepalive":"str?",
    "fov":"int?",
    "cloudant_url":"str?",
    "cloudant_username":"str?",
    "cloudant_password":"str?",
    "daemon":"str?",
    "interval":"int?",
    "target_dir":"str?"
  }
}
