{
  "name": "Horizon Control",
  "url": "https://github.com/dcmartin/hassio-addons/tree/master/horizon",
  "version": "0.1.1",
  "slug": "horizon",
  "description": "Example base addon for horizon",
  "startup": "before",
  "boot": "auto",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "i386"
  ],
  "hassio_role": "default",
  "hassio_api": true,
  "homeassistant_api": true,
  "host_network": true,
  "privileged": [
    "NET_ADMIN",
    "SYS_ADMIN"
  ],
  "timeout": 90,
  "map": [
    "share:rw",
    "config:rw"
  ],
  "options": {
    "log_level": "info",
    "timezone": "America/Los_Angeles",
    "pattern": {
      "id": "cpu2msghub",
      "org": "IBM",
      "url": "github.com.open-horizon.examples.cpu2msghub"
    },
    "variables": [
      {
        "env": "MSGHUB_API_KEY",
        "value": ""
      },
      {
        "env": "MSGHUB_BROKER_URL",
        "value": "kafka03-prod02.messagehub.services.us-south.bluemix.net:9093,kafka04-prod02.messagehub.services.us-south.bluemix.net:9093,kafka01-prod02.messagehub.services.us-south.bluemix.net:9093,kafka02-prod02.messagehub.services.us-south.bluemix.net:9093,kafka05-prod02.messagehub.services.us-south.bluemix.net:9093"
      }
    ],
    "exchange": {
      "username": "iamapikey",
      "password": "",
      "organization": "",
      "url": "https://alpha.edge-fabric.com/v1"
    }
  },
  "schema": {
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)",
    "timezone": "str?",
    "pattern": {
      "id": "str",
      "org": "str",
      "url": "url"
    },
    "variables": [
      {
        "env": "str?",
        "value": "str?"
      }
    ],
    "exchange": {
      "device": "str?",
      "token": "str?",
      "username": "str",
      "password": "str",
      "url": "url",
      "organization": "str"
    }
  },
  "environment": {
    "LOG_FORMAT": "{LEVEL}: {MESSAGE}"
  }
}
