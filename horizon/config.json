{
  "name": "Horizon Example",
  "url": "https://github.com/dcmartin/hassio-addons/tree/master/horizon",
  "version": "0.1.1",
  "slug": "horizon",
  "description": "Example base addon for horizon",
  "startup": "before",
  "boot": "auto",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "i386"
  ],
  "hassio_role": "default",
  "hassio_api": true,
  "homeassistant_api": true,
  "host_network": true,
  "privileged": [
    "NET_ADMIN",
    "SYS_ADMIN"
  ],
  "full_access": false,
  "host_pid": false,
  "docker_api": false,
  "timeout": 90,
  "map": [
    "share:rw",
    "config:rw"
  ],
  "options": {
    "log_level": "info",
    "timezone": "America/Los_Angeles",
    "pattern": {
      "id": "cpu2msghub",
      "org": "IBM",
      "url": "github.com.open-horizon.examples.cpu2msghub"
    },
    "variables": [ { "env": "MSGHUB_API_KEY", "value": "" } ],
    "exchange": {
      "device": "",
      "username": "",
      "password": "",
      "url": "https://stg-edge-cluster.us-south.containers.appdomain.cloud/v1",
      "organization": "cgiroua@us.ibm.com"
    }
  },
  "schema": {
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)",
    "timezone": "str?",
    "pattern": {
      "id": "str",
      "org": "str",
      "url": "url"
    },
    "variables": [ { "env":"str?", "value":"str?" } ],
    "exchange": {
      "device": "str?",
      "token": "str?",
      "username": "str",
      "password": "str",
      "url": "url",
      "organization": "str"
    }
  },
  "environment": {
    "LOG_FORMAT": "{LEVEL}: {MESSAGE}"
  }
}
